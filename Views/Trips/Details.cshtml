@model TripViewModel
@using TravelExpenseTracker.Domain

@{
    ViewData["Title"] = "Trip Details";
}

<div class="container-fluid mt-3">
    <!-- Trip Header -->
    <div class="row d-flex justify-content-between align-items-center mb-4">
        <div class="col-md-6 col-sm-12">
            <h1>@Model.Trip.Name</h1>
            <p class="text-muted mb-0">
                @Model.Trip.StartDate.ToString("MMM dd, yyyy") - @Model.Trip.EndDate.ToString("MMM dd, yyyy")
                @if (!string.IsNullOrEmpty(Model.Trip.Destination))
                {
                    <span> • @Model.Trip.Destination</span>
                }
            </p>
        </div>
        <div class="col-md-6 col-sm-12 mt-3 d-flex justify-content-end">
            <a asp-area="" asp-controller="Expenses" asp-action="Create" asp-route-tripId="@Model.Trip.Id" class="btn btn-success mx-2">Add Expense</a>
            <a asp-area="" asp-controller="Trips" asp-action="Edit" asp-route-id="@Model.Trip.Id" class="btn btn-outline-secondary">Edit Trip</a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Trip.Description))
    {
        <div class="mb-4">
            <p>@Model.Trip.Description</p>
        </div>
    }

    <!-- Trip Summary -->
    <div class="row mb-4">
        <div class="col-md-3 col-6">
            <div class="text-center">
                <h4 class="text-primary">@Model.ExpenseSummary.TotalExpenses</h4>
                <small class="text-muted">Total Expenses</small>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="text-center">
                <h4 class="text-success">@Model.ExpenseSummary.TotalAmount.ToString("C")</h4>
                <small class="text-muted">Total Amount</small>
            </div>
        </div>
        <div class="col-md-3 d-none d-md-block">
            <div class="text-center">
                <h4 class="text-info">@((Model.ExpenseSummary.TotalAmount / Math.Max(1, (Model.Trip.EndDate - Model.Trip.StartDate).Days + 1)).ToString("C"))</h4>
                <small class="text-muted">Average per Day</small>
            </div>
        </div>
        <div class="col-md-3 d-none d-md-block">
            <div class="text-center">
                <h4 class="text-secondary">@((Model.Trip.EndDate - Model.Trip.StartDate).Days + 1)</h4>
                <small class="text-muted">Days</small>
            </div>
        </div>
    </div>

    <!-- Expense Categories -->
    @foreach (ExpenseCategory category in Enum.GetValues<ExpenseCategory>())
    {
        var categoryExpenses = Model.Expenses.Where(e => e.Category == category).OrderBy(e => e.ExpenseDate).ToList();
        var categoryTotal = categoryExpenses.Sum(e => e.Amount);
        var tableColor = @TripViewModel.CategoryClasses.GetValueOrDefault(category.ToString(), "bg-dark");
        <div class="mb-5">
            <div class="d-flex justify-content-between align-items-center p-2 @tableColor">
                <h4 class="p-2">@category.ToString()</h4>
                <div>
                    <span class="badge bg-dark me-2">@categoryExpenses.Count expenses</span>
                    <span class="badge bg-primary">@categoryTotal.ToString("C")</span>
                </div>
            </div>

            @if (categoryExpenses.Any())
            {
                <div class="table-responsive">
                    <table class="table border-dark">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Company</th>                             
                                <th class="text-end">Amount</th>
                                <th class="text-center">Receipt</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var expense in categoryExpenses)
                            {
                                <tr class="border-white">
                                    <td class="text-center flex-nowrap text-nowrap">@expense.ExpenseDate.ToString("ddd MMM dd")</td>
                                    <td><strong>@expense.CompanyName</strong></td>                                 
                                    <td class="text-end">@expense.Amount.ToString("C")</td>
                                    <td class="text-center">
                                        @if (!string.IsNullOrEmpty(expense.BlobName))
                                        {
                                            <span class="badge bg-success">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">No</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-area="" asp-controller="Expenses" asp-action="Details" asp-route-id="@expense.Id" asp-route-tripId="@expense.TripId" class="btn btn-outline-primary" title="View Details">
                                                View
                                            </a>
                                            <a asp-area="" asp-controller="Expenses" asp-action="Edit" asp-route-id="@expense.Id" asp-route-tripid="@expense.TripId" class="btn btn-outline-secondary" title="Edit">
                                                Edit
                                            </a>
                                            <a data-expense-id="@expense.Id" data-expense-name="@expense.CompanyName" data-trip-id="@Model.Trip.Id" class="btn btn-outline-danger" title="Delete" onclick="deleteExpense(this)">
                                                Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="5">
                                        @if (!string.IsNullOrEmpty(expense.Description))
                                        {
                                            <p class="mb-1">@expense.Description</p>
                                        }
                                        @if (!string.IsNullOrEmpty(expense.GuestNames))
                                        {
                                            <p class="mb-0"><strong>Guests:</strong> @expense.GuestNames</p>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3"><strong>@category.ToString() Total</strong></td>
                                <td class="text-end"><strong>@categoryTotal.ToString("C")</strong></td>
                                <td colspan="2"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-4">
                    <p class="mb-2">No @category.ToString().ToLower() expenses yet</p>
                    <a asp-area="" asp-controller="Expenses" asp-action="Create" asp-route-tripId="@Model.Trip.Id" asp-route-category="@category" class="btn btn-sm btn-outline-primary">Add First Expense</a>
                </div>
            }
        </div>
    }
    
    <div class="d-flex justify-content-end">
        <a asp-action="Submit" asp-controller="Trip" asp-route-id="@Model.Trip.Id" class="btn btn-danger" onclick="return confirm('Are you sure? This report will be deleted!!')">Reported</a>
    </div>
</div>

<!--hidden form to trigger a post for the delete link-->
<!--This technique keeps the style for the group buttons</style>-->
<form id="deleteForm" method="post" style="display:none;">
    @Html.AntiForgeryToken()
</form>
<script>
    function deleteExpense(element) {
        var expenseId = element.getAttribute('data-expense-id');
        var expenseName = element.getAttribute('data-expense-name');
        var tripId = element.getAttribute('data-trip-id');
        
        if (confirm('Are you sure you want to delete ' + expenseName + '?')) {
            var form = document.getElementById('deleteForm');
            form.action = '@Url.Action("Delete", "Expenses")/' + expenseId + '?tripId=' + tripId;
            form.submit();
        }
    }
</script>
